# MUD Agent Configuration
# Copy this file to .env and fill in your credentials

# MUD Server Credentials
MUD_USERNAME=your_username
MUD_PASSWORD=your_password

# Database Configuration
# Local SQLite is always used for gameplay. Set these to enable background sync to Supabase.
# DATABASE_URL=postgresql://user:password@host:port/dbname
# SYNC_ENABLED=true
# SYNC_INTERVAL=30

# Optional: MUD Server Connection Settings
# MUD_HOST=aardmud.org
# MUD_PORT=4000

AUTOCAST_COMMANDS=nimble,hide,sneak,cast under
RECALL="wear amu;enter;envenom sun;dual sun"
